<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wifiImg"
        android:layout_alignParentRight="true"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="23dp"
        android:src="@drawable/wifi_image_offline"/>

    <TextView
        android:id="@+id/listItemName"
        android:paddingTop="18dp"
        android:paddingLeft="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amir Raza"
        android:textColor="#000000"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_toLeftOf="@+id/wifiImg"
        android:layout_toStartOf="@+id/wifiImg" />
    <TextView
        android:id="@+id/listItemNum"
        android:layout_below="@+id/listItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:textSize="13sp"
        android:text="+923002361459"/>

</RelativeLayout>